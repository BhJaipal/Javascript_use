{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": false,
        "alwaysStrict": true
    },
    "ts-node": {
        "typeCheck": true,
        "compiler": "typescript",
        "ignore": [
            "(?:^|/)node_modules/"
        ],
        "pretty": true,
        "preferTsExts": true,
        "scopeDir": "First of: `tsconfig.json` \"src\" if specified, directory containing `tsconfig.json`, or cwd if no `tsconfig.json` is loaded.",
    },
    "compileOnSave": true,
    "typeAcquisition": {"include": [
        "./*.js",
        "./*.jsx",
        "./*.tsx",
        "./*.ts"
        ]}
}