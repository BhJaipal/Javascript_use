{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": false,
        "alwaysStrict": true,
        "checkJs": true,
        "allowImportingTsExtensions": true,
        "jsxImportSource": "react"
    },
    "ts-node": {
        "typeCheck": true,
        "compiler": "typescript",
        "ignore": [
            "../node_modules/"
        ],
        "pretty": true,
        "preferTsExts": true,
        "scopeDir": "First of: `tsconfig.json` \"src\" if specified, directory containing `tsconfig.json`, or cwd if no `tsconfig.json` is loaded.",
        "compilerOptions": {
            "checkJs": false,
            "allowImportingTsExtensions": true,
            "allowJs": true,
            "alwaysStrict": true,
            "charset": "UTF-8",
            "jsxImportSource": "react",
            "jsx": "react",
            "jsxFactory": "ReactDOM.render",
            "jsxFragmentFactory": "React.Fragment",
            "module": "E"
        }
    },
    "compileOnSave": true,
    "typeAcquisition": {"include": [
        "./*.js",
        "./*.jsx",
        "./*.tsx",
        "./*.ts"
    ]}
}